entrypoint = "backend/main.py"

[interpreter]
command = ["python3"]

[build]
command = "cd backend && pip install -r requirements.txt"

[run]
command = "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000"

[nix]
channel = "stable-24_05"

[env]
PYTHONPATH = "${REPL_HOME}/backend"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "cd backend && pip install -r requirements.txt"]
run = ["sh", "-c", "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000"]

[[ports]]
localPort = 8000
externalPort = 80
