entrypoint = "backend/main.py"

[nix]
channel = "stable-24_05"

[env]
PYTHONPATH = "${REPL_HOME}/backend"

[deployment]
deploymentTarget = "cloudrun"
build = "poetry install --no-root"
run = "cd backend && poetry run python -m uvicorn main:app --host 0.0.0.0 --port 8000"

[[ports]]
localPort = 8000
externalPort = 80

[agent]
expertMode = true
