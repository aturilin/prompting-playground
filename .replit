build = "cd backend && pip install -r requirements.txt"
run = "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000"

[nix]
channel = "stable-24_05"

[env]
PYTHONPATH = "${REPL_HOME}/backend"

[deployment]
build = ["sh", "-c", "cd backend && pip install -r requirements.txt"]
run = ["sh", "-c", "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000"]

[[ports]]
localPort = 8000
externalPort = 80
